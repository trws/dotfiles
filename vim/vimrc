function! CloseWindowOrTab()
  " if it's a list, thus more than one window, close window
  if type(winlayout()[1]) == 3
    :close
  else
    :tabclose
  endif
endfunction
call helpers#Map_for_all_meta('w', ":call CloseWindowOrTab()<CR>", 2, 1, 1)


